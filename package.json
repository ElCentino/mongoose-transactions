{
  "name": "mongoose-transactions",
  "version": "1.0.0",
  "description": "Atomicity and Transactions for mongoose",
  "main": "dist/main.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.{ts}'",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topperblues/mongoose-transactions.git"
  },
  "keywords": [
    "mongoose",
    "transactions"
  ],
  "author": "Nicola Bonavita @topperblues, Antonio D'Angelo @daton89",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/topperblues/mongoose-transactions/issues"
  },
  "homepage": "https://github.com/topperblues/mongoose-transactions#readme",
  "dependencies": {
    "mongoose": "^4.11.1"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.42",
    "@types/jest": "^20.0.2",
    "@types/node": "^8.0.11",
    "jest": "^20.0.4",
    "ts-jest": "^20.0.7",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$",
    "verbose": true,
    "notify": true
  }
}
